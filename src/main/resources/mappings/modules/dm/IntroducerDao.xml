<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fxb.jeesite.modules.dm.dao.IntroducerDao">
    
	<sql id="introducerColumns">
		a.id AS "id",
		a.name AS "name",
		a.sex AS "sex",
		a.idcard AS "idcard",
		a.tel AS "tel"
	</sql>
	
	<sql id="introducerJoins">
	</sql>
    
	<select id="get" resultType="Introducer">
		SELECT 
			<include refid="introducerColumns"/>
		FROM introducer a
		<include refid="introducerJoins"/>
		WHERE a.id = #{id}
	</select>
	
	<select id="findList" resultType="Introducer">
		SELECT 
			<include refid="introducerColumns"/>
		FROM introducer a
		<include refid="introducerJoins"/>
		<where>
			
			<if test="id != null and id != ''">
				AND a.id = #{id}
			</if>
			<if test="name != null and name != ''">
				AND a.name LIKE 
					<if test="dbName == 'oracle'">'%'||#{name}||'%'</if>
					<if test="dbName == 'mssql'">'%'+#{name}+'%'</if>
					<if test="dbName == 'mysql'">concat('%',#{name},'%')</if>
			</if>
			<if test="sex != null and sex != ''">
				AND a.sex = #{sex}
			</if>
			<if test="idcard != null and idcard != ''">
				AND a.idcard LIKE 
					<if test="dbName == 'oracle'">'%'||#{idcard}||'%'</if>
					<if test="dbName == 'mssql'">'%'+#{idcard}+'%'</if>
					<if test="dbName == 'mysql'">concat('%',#{idcard},'%')</if>
			</if>
			<if test="tel != null and tel != ''">
				AND a.tel LIKE 
					<if test="dbName == 'oracle'">'%'||#{tel}||'%'</if>
					<if test="dbName == 'mssql'">'%'+#{tel}+'%'</if>
					<if test="dbName == 'mysql'">concat('%',#{tel},'%')</if>
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
			</otherwise>
		</choose>
	</select>
	
	<select id="findAllList" resultType="Introducer">
		SELECT 
			<include refid="introducerColumns"/>
		FROM introducer a
		<include refid="introducerJoins"/>
		<where>
			
		</where>		
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
			</otherwise>
		</choose>
	</select>
	
	<insert id="insert">
		INSERT INTO introducer(
			id,
			name,
			sex,
			idcard,
			tel
		) VALUES (
			#{id},
			#{name},
			#{sex},
			#{idcard},
			#{tel}
		)
	</insert>
	
	<update id="update">
		UPDATE introducer SET 	
			name = #{name},
			sex = #{sex},
			idcard = #{idcard},
			tel = #{tel}
		WHERE id = #{id}
	</update>
	
	<update id="delete">
		DELETE FROM introducer
		WHERE id = #{id}
	</update>
	
</mapper>